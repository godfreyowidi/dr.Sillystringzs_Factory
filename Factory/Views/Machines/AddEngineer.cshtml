@{
  Layout = "_Layout";
}

@model Factory.Models.Machine 

<h3>Add a Engineer</h3>
<dt>
  @Html.DisplayFor(model => model.Name)
</dt>
<table>
  <tr>
    @using (Html.BeginForm())
    {
      @Html.HiddenFor(model => model.MachineId)
   
        @Html.Label("Select Engineer", null, htmlAttributes: new { @class = "control-label col-md-2"})
        @Html.DropDownList("EngineerId", null, htmlAttributes: new { @class = "form-control"})
     
      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Save" class="btn btn-default" />
        </div>
      </div>
    }
  </tr>
</table>
<p>@Html.ActionLink("Back to list", "Index")</p>
