@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Engineer>

<h4>Engineer</h4>

@using (Html.BeginForm("Index", "Engineer", FormMethod.Get))
{
  <p>
    Find by name: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
    <input type="submit" value="Search" />
  </p>
}
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        
        <th>
            @Html.ActionLink("Machine", "Index", new { sortOrder = ViewBag.DateSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
    </tr>

  @if (@Model.Count == 0)
  {
    <h3>No Engineers have been added yet!</h3>
  } 

  @foreach (Engineer engineer in Model)
  {
    <tr>
        <td>  
          @Html.ActionLink($"{engineer.Name}", "Details", new { id = engineer.EngineerId })
        </td>
    </tr>
  }
</table>
<td>
  @Html.ActionLink("Add an Engineer", "Create")
</td>


