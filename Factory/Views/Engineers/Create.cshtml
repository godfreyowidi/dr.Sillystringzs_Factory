@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h4>Add an Engineer</h4>
<hr />
@using (Html.BeginForm())
{
  <div class="form-group">
    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
      @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" }})
    </div>
  </div>

  <div>
    @Html.Label("Select Machine", null, htmlAttributes: new { @class = "control-label col-md-2"})
    @Html.DropDownList("MachineId", null, htmlAttributes: new { @class = "form-control"})
  </div>

  <div class="form-group">
      <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Add an Engineer" class="btn btn-default" />
      </div>
  </div>
}
<div>
  @Html.ActionLink("Show all Engineers", "Index")
</div>